algoritmo "exemplo de cálculo"
var
   N1, N2, s: inteiro
   m: real
inicio
      Escreva ("Digite um número: ")
      Leia (N1)
      Escreva ("Digite outro número: ")
      Leia (N2)
      s <- N1 + N2
      m <- (N1 + N2) / 2
      Escreval ("A soma entre ",N1, " e ",N2, " é igual ", s)
      Escreva ("A média entre ", N1, " e ",N2, " é ugual ",m)
fimalgoritmo